{
  "name": "@bchouse/paygate",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "dev": "run-p dev:*",
    "start": "cross-env NODE_ENV=production node -r dotenv/config ./build/server.js  dotenv_config_path=../../.env.development",
    "clean": "rimraf build public/build .cache",
    "dev:routes": "remix-routes -w",
    "dev:remix": "dotenv -e ../../.env.development remix vite:dev",
    "test": "vitest --coverage",
    "build:routes": "remix-routes",
    "build:remix": "remix vite:build",
    "docker:build": "docker compose --env-file ../../.env.development build paygate",
    "docker:up": "docker compose --env-file ../../.env.development up paygate --force-recreate",
    "env:dev": "dotenv -e ../../.env.development --",
    "env:staging": "dotenv -e ../../.env.staging --"
  },
  "dependencies": {
    "@bchouse/inngest": "workspace:^",
    "@bchouse/utils": "workspace:^",
    "@bitauth/libauth": "^2.0.0-alpha.8",
    "@planetscale/database": "^1.10.0",
    "@psf/bch-js": "^6.7.4",
    "@remix-run/express": "^2.8.1",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@remix-run/serve": "^2.8.1",
    "@remix-run/server-runtime": "^2.8.1",
    "@remix-run/v1-meta": "^0.1.3",
    "@sentry/remix": "^7.106.0",
    "@t3-oss/env-core": "^0.9.2",
    "bchaddrjs": "^0.5.2",
    "bigint-buffer": "^1.1.5",
    "bitcore-payment-protocol": "^8.1.1",
    "buffer-polyfill": "npm:buffer@^6.0.3",
    "cashscript": "npm:@sahidmiller/cashscript@0.10.0-next.4",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "dayjs": "^1.11.9",
    "electrum-cash": "^2.0.10",
    "express": "^4.18.2",
    "http-graceful-shutdown": "^3.1.13",
    "ioredis": "^5.3.2",
    "isbot": "^3.6.5",
    "kysely": "^0.26.3",
    "kysely-planetscale": "^1.4.0",
    "morgan": "^1.10.0",
    "nanoid": "^4.0.2",
    "p-reduce": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-routes": "^1.7.2",
    "remix-typedjson": "^0.4.1",
    "uuid": "^9.0.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.8.1",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.5",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.4.0",
    "tsx": "^4.7.1",
    "vite-env-only": "^2.2.1"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "engines": {
    "node": ">=14"
  }
}
