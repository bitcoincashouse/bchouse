{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "declaration": true,
    "composite": true,
    "rootDir": "./src"
  },
  "exclude": ["fixture", "lib"]
}