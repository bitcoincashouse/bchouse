{
  "label": "Compile Project Typescript",
  "type": "shell",
  "command": "./node_modules/.bin/tsc",
  "args": ["--noEmit", "--build"],
  "presentation": {
      "reveal":"never",
      "echo": false,
      "focus": false,
      "panel": "dedicated"
  },
  "problemMatcher": "$tsc-watch",
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/apps/cms/BCHouse.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/apps/cms/BCHouse.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/apps/cms/BCHouse.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
} 